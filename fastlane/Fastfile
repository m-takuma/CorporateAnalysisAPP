default_platform(:ios)

platform :ios do
  before_all do |lane, options|
    puts("before_all (lane: #{lane})")
    # xcode_select("/Applications/Xcode-13.4.1.app")
  end
  before_each do |lane, options|
    puts("before_each (lane: #{lane})")
  end
  after_each do |lane, options|
    puts("after_each (lane: #{lane})")
  end
  after_all do |lane, options|
    puts("after_all (lane: #{lane})")
  end

  lane :unittest do
    run_tests(
      scheme: "CorporateAnalysisHubAPP",
      configuration: "Debug",
      devices: ["iPhone 13"]
    )
  end
end
